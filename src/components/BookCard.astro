---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
  image: ImageMetadata;
  link: string;
  cta: string;
}

const { title, description, image, link, cta } = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden flex flex-col h-full">
  <div class="h-64">
    <Image src={image} alt={title} class="w-full h-full object-contain" />
  </div>
  <div class="p-6 flex flex-col flex-1">
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    <p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
    <a
      href={link}
      class="text-brand hover:text-brand-dark font-medium mt-auto"
      target="_blank"
    >
      {cta} â†’
    </a>
  </div>
</div>