---
import type { CollectionEntry } from 'astro:content';
import { format } from 'date-fns';

interface Props {
  posts: CollectionEntry<'blog'>[];
}

const { posts } = Astro.props;

// Don't render anything if there are no related posts
if (!posts || posts.length === 0) {
  return null;
}
---

<div class="mt-16 pt-8 border-t border-gray-200">
  <h3 class="text-2xl font-bold mb-6">Related Articles</h3>
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    {posts.map(post => (
      <article class="border border-gray-200 rounded-lg p-4 hover:border-brand transition-colors">
        <h4 class="font-bold mb-2">
          <a href={`/${post.id}`} class="hover:text-brand">
            {post.data.title}
          </a>
        </h4>
        <time class="text-sm text-gray-600 block mb-2">
          {format(post.data.date, 'MMMM yyyy')}
        </time>
        {post.data.description && (
          <p class="text-sm text-gray-700 line-clamp-3">
            {post.data.description}
          </p>
        )}
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="mt-3 flex flex-wrap gap-2">
            {post.data.tags.slice(0, 3).map(tag => (
              <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">
                {tag}
              </span>
            ))}
          </div>
        )}
      </article>
    ))}
  </div>
</div>
