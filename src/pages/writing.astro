---
import Layout from '../layouts/Layout.astro';
import SearchBar from '../components/writing/SearchBar.astro';
import { getCollection } from 'astro:content';
import { format } from 'date-fns';
import { getReadingTimeFromBody } from '../utils/readingTime';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
const archivedCount = sortedPosts.filter(p => p.data.category === 'archive').length;
---

<Layout title="Writing - Sam Julien">
  <SearchBar />
  <div class="space-y-12" id="articles-container">
    {sortedPosts.map(post => (
      <article
        data-article
        data-title={post.data.title}
        data-excerpt={post.data.excerpt}
        data-category={post.data.category || 'uncategorized'}
        class={`border-b border-gray-200 dark:border-gray-700 pb-8 ${post.data.category === 'archive' ? 'hidden' : ''}`}
      >
        <h2 class="text-2xl font-bold mb-2">
          <a href={`/${post.id}`} class="hover:text-brand">
            {post.data.title}
          </a>
        </h2>
        <div class="text-gray-600 dark:text-gray-400 mb-4 flex flex-wrap gap-2 items-center">
          <time>
            Last updated: {post.data.date_updated ? format(post.data.date_updated, 'MMMM yyyy') : format(post.data.date, 'MMMM yyyy')}
          </time>
          <span aria-hidden="true">•</span>
          <span>{getReadingTimeFromBody(post)}</span>
        </div>
        <p class="text-gray-700 dark:text-gray-300">{post.data.description}</p>
        {post.data.tags && post.data.tags.length > 0 && (
          <div class="mt-4 flex flex-wrap gap-2">
            {post.data.tags.map(tag => (
              <a
                href={`/tags/${encodeURIComponent(tag.toLowerCase().replace(/\s+/g, '-'))}`}
                class="text-xs bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 px-2 py-1 rounded hover:bg-green-200 dark:hover:bg-green-800 transition-colors"
              >
                {tag}
              </a>
            ))}
          </div>
        )}
        <a href={`/${post.id}`} class="text-brand hover:text-brand-dark mt-4 inline-block">
          Read More →
        </a>
      </article>
    ))}
  </div>

  {archivedCount > 0 && (
    <div class="mt-12 pt-8">
      <button
        id="toggle-archive"
        class="text-gray-500 dark:text-gray-400 hover:text-brand dark:hover:text-brand transition-colors"
      >
        <span id="toggle-text">Show {archivedCount} archived articles</span>
      </button>
    </div>
  )}

  <script>
    const toggleBtn = document.getElementById('toggle-archive');
    const toggleText = document.getElementById('toggle-text');
    const articles = document.querySelectorAll('[data-category="archive"]');
    let showingArchived = false;

    toggleBtn?.addEventListener('click', () => {
      showingArchived = !showingArchived;
      articles.forEach(article => {
        article.classList.toggle('hidden', !showingArchived);
      });
      if (toggleText) {
        toggleText.textContent = showingArchived
          ? `Hide ${articles.length} archived articles`
          : `Show ${articles.length} archived articles`;
      }
    });
  </script>
</Layout>